<h1><%= @list.name %></h1>

<div class="films d-flex justify-content-center">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card" style="width: 18rem;">
      <img id="poster" src="<%= bookmark.movie.poster_url%>" class="card-img-top" alt="Poster Movie">
      <div class="card-body">
        <h5 class="card-title"><%= bookmark.movie.title %></h5>
        <p class="card-text"><%= bookmark.movie.overview %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= bookmark.movie.rating%> ‚≠ê</li>
        <li class="list-group-item"><%= bookmark.comment %></li>
      </ul>
      <div class="card-body">
        <%= link_to "Delete", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      </div>

    </div>
  <% end %>
</div>
<br>

<%= simple_form_for([@list, @bookmark]) do |f| %>
<%= f.input :comment %>
<%= f.association :movie %>
<%= f.submit %>
<% end %>

<%= link_to 'Back to lists', lists_path %>
<%= link_to 'Add a bookmark',  new_list_bookmark_path(@list) %>
